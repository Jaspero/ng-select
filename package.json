{
  "name": "@jaspero/ng2-select",
  "version": "0.0.10",
  "description": "A select library for Angular 2, with both single and multiple functionality.",
  "scripts": {
    "lint": "tslint ./src/**/**.ts -e ./src/**/**.d.ts -t verbose",
    "test": "karma start",
    "clean": "rm *.metadata.json index.d.ts index.js ng2-select.d.ts ng2-select.js src/*.json src/*.js src/*.d.ts && rm -rf bundles && rm -rf coverage",
    "test-watch": "karma start --singleRun=false --autoWatch=true",
    "prepublish": "npm run test && ngc && npm run build",
    "postpublish": "npm run clean",
    "build": "webpack && cp bundles/ng2-select.umd.js bundles/index.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Jaspero/ng2-select.git"
  },
  "keywords": [
    "angular",
    "angular2",
    "select"
  ],
  "author": "Jaspero co.",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Jaspero/ng2-select/issues"
  },
  "main": "bundles/ng2-select.umd.js",
  "module": "index.js",
  "typings": "index.d.ts",
  "homepage": "https://github.com/Jaspero/ng2-select",
  "peerDependencies": {
    "@angular/core": "^2.0.0",
    "@angular/forms": "^2.0.0"
  },
  "devDependencies": {
    "@angular/common": "2.3.1",
    "@angular/compiler": "2.3.1",
    "@angular/compiler-cli": "2.3.1",
    "@angular/core": "2.3.1",
    "@angular/forms": "2.3.1",
    "@angular/platform-browser": "2.3.1",
    "@angular/platform-browser-dynamic": "2.3.1",
    "@angular/platform-server": "2.3.1",
    "@types/hammerjs": "2.0.33",
    "@types/jasmine": "2.5.38",
    "@types/node": "6.0.52",
    "awesome-typescript-loader": "3.0.0-beta.17",
    "core-js": "^2.4.1",
    "istanbul-instrumenter-loader": "0.2.0",
    "jasmine-core": "2.5.2",
    "karma": "1.3.0",
    "karma-chrome-launcher": "2.0.0",
    "karma-coverage": "1.1.1",
    "karma-jasmine": "1.0.2",
    "karma-mocha-reporter": "^2.1.0",
    "karma-remap-coverage": "0.1.2",
    "karma-sourcemap-loader": "0.3.7",
    "karma-webpack": "1.8.0",
    "loader-utils": "0.2.16",
    "reflect-metadata": "0.1.8",
    "rxjs": "^5.0.1",
    "source-map-loader": "0.1.5",
    "ts-helpers": "1.1.2",
    "tslint": "4.0.2",
    "tslint-loader": "3.3.0",
    "typescript": "~2.0.10",
    "webpack": "2.1.0-beta.27",
    "zone.js": "^0.7.4"
  }
}
